<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        android:dialogTitle="Change Name"
        android:key="user_name"
        android:summary="Name selected"
        android:title="Change Name"
        app:dialogIcon="@drawable/ic_person"
        app:icon="@drawable/ic_person" />

    <ListPreference
        android:defaultValue="0"
        android:dialogTitle="Choose a theme"
        android:entries="@array/settings_list_themes_titles"
        android:entryValues="@array/settings_list_themes_values"
        android:key="theme"
        android:summary="Theme selected"
        android:title="@string/theme_dialog_title"
        app:dialogIcon="@drawable/ic_theme"
        app:icon="@drawable/ic_theme" />
</PreferenceScreen>